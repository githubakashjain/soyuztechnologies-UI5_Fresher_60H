<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" 
          xmlns:f="sap.ui.layout.form"
          controllerName="emc2.sd.products.controller.Supplier">
    <Page title="{name}" showNavButton="true" navButtonPress="onBack">
        <content>
            <ObjectHeader title="{name}" intro="{city}" number="{contactPerson}" 
                          numberUnit="{phone}" icon="sap-icon://supplier">
                <attributes>
                    <ObjectAttribute title="Email" text="{email}"></ObjectAttribute>
                    <ObjectAttribute title="Since When" text="{sinceWhen}"></ObjectAttribute>
                </attributes>
            </ObjectHeader>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>